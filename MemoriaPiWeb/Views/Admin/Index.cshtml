@model IEnumerable<MemoriaPiWeb.ViewModels.AdminUserViewModel>
@{
    ViewData["Title"] = "Admin";
}

<div class="form-container-wrapper">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <h4 class="text-center text-white-50 mb-4">Benutzerverwaltung</h4>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="table-responsive">
        <table class="table admin-user-table">
            <thead>
                <tr>
                    <th></th>
                    <th>Benutzername</th>
                    <th>E-Mail</th>
                    <th>Rollen</th>
                    <th>Aktionen</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <img src="@(user.ProfilePictureUrl ?? "/images/default-avatar.png")" class="rounded-circle" width="50" height="50" style="object-fit: cover;" alt="Profilbild">
                        </td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@string.Join(", ", user.CurrentRoles)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Bearbeiten</a>
                            <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Sind Sie sicher, dass Sie diesen Benutzer löschen möchten?');">
                                <button type="submit" class="btn btn-sm btn-danger">Löschen</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>